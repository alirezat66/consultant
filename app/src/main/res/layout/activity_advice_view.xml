<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:id="@+id/header"
        app:cardElevation="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueBack"
        android:paddingTop="24dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layoutDirection="rtl">
        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:id="@+id/imgLogo"
            android:scaleType="fitXY"
            android:src="@drawable/ic_insert_photo_white"
            android:layout_margin="@dimen/out_normal_margin"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imgLogo"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"

                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:text="درخواست مشاوره با"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:id="@+id/txt_cat_name"
                android:textColor="@color/white"
                android:text="ثبت شرکت و برند"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txt_sub_cat_name"
                android:layout_marginTop="@dimen/inner_normal_margin"
                android:textColor="@color/white"
                android:text="صدور احکام ورشکستگی"/>
        </LinearLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/second_layout"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"

            android:layoutDirection="rtl">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                app:cardElevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/lyState"
                android:background="#FF607D8B"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="در انتظار تایید کاربر"
                    android:id="@+id/txt_state"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/txt_my_act"
                android:layout_marginTop="16dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/divider_one"
                android:background="@color/gray_very_light"
                android:layout_marginTop="16dp"
                android:orientation="horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_user_act"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_very_light"
                android:layout_marginTop="16dp"
                android:id="@+id/divider_two"
                android:orientation="horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_payment_act"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_very_light"
                android:layout_marginTop="16dp"

                android:id="@+id/divider_three"
                android:orientation="horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/txt_free_state"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_very_light"
                android:layout_marginTop="16dp"
                android:id="@+id/divider_four"
                android:orientation="horizontal"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/out_normal_margin"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:text="خلاصه درخواست مشاوره"
                    android:textColor="#5d5d5d"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_margin="@dimen/out_normal_margin"
                android:text=""
                android:gravity="right"
                android:id="@+id/txt_description"
                android:textColor="#777777"
                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/docs_recycler"
            android:background="@color/white"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
        </ScrollView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layoutDirection="rtl"

        android:id="@+id/footer"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF5D5D5D"
            android:visibility="gone"
            android:id="@+id/just_has_back_ly"
            android:weightSum="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF5D5D5D"
                android:textSize="16sp"
                android:id="@+id/btn_back"
                android:textColor="@color/white"
                android:text="بازگشت"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:id="@+id/back_and_cancel_ly"
            android:visibility="gone"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/greenBlue"
                android:text="بازگشت"
                android:textColor="@color/white"
                android:id="@+id/btn_back_second"
                android:layout_height="match_parent" />
                     <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#e91e63"
                android:text="لغو درخواست"
                android:id="@+id/btn_cancel"
                android:textColor="@color/white"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:id="@+id/back_and_cancel_and_call_ly"
            android:visibility="visible"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/greenBlue"
                android:text="بازگشت"
                android:textColor="@color/white"
                android:id="@+id/btn_back_third"
                android:layout_height="match_parent" />
                     <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/done"
                android:text="تماس"
                android:id="@+id/btn_call"
                android:textColor="@color/white"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#e91e63"
                android:text="لغو درخواست"
                android:id="@+id/btn_cancel_third"
                android:textColor="@color/white"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>